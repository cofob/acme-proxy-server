# The public URL of this server
SERVER_URL="http://your-server-ip:8000"

# The local domain suffix you want to issue certs for
BASE_DOMAIN_SUFFIX="lo.f0rth.space"

# Allowed IPs for issuance
ALLOWED_CHALLENGE_CIDR="10.0.24.0/21"

# Path to acme.sh script. Run install_acmesh.sh to install it in /root/.acme.sh/
ACME_SH_PATH="/root/.acme.sh/acme.sh"

# The dns provider hook for acme.sh (e.g., dns_cf, dns_aws, etc.)
ACME_SH_DNS_API="dns_cf"

# The email for your Let's Encrypt account
ACME_SH_ACCOUNT_EMAIL="your-email@example.com"

# --- Cloudflare Credentials (example) ---
# Replace with your actual Cloudflare API Token or Global API Key
CF_KEY="your_cloudflare_api_token"
CF_EMAIL="your_cloudflare_account_email"
